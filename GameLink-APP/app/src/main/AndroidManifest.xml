            android:exported="false" />
        <activity
            android:name=".view.createProfile.CreateProfileStep3Activity"
            android:exported="false" />
        <activity
            android:name=".view.createProfile.CreateProfileStep2Activity"
            android:exported="false" />
        <activity
            android:name=".view.createProfile.CreateProfileStep1Activity"
            android:exported="false" />
        <activity
            android:name=".view.RegisterPostActivity"
            android:exported="false"
            android:label="@string/title_activity_register_post"
            android:theme="@style/Theme.GameLinkAPP" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegisterUserActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>